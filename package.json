{
  "name": "triceratops_assassin_chess",
  "version": "1.0.0",
  "description": "A chess game with standard mode and optional special pieces (Triceratops and Assassins), supporting both local and peer-to-peer network play. Built as a responsive web application with PWA capabilities.",
  "type": "module",
  "main": "sw.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "check": "npm run lint && npm test",
    "start": "./run",
    "deploy": "./deploy"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dburt/triceratops_assassin_chess.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dburt/triceratops_assassin_chess/issues"
  },
  "homepage": "https://github.com/dburt/triceratops_assassin_chess#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
